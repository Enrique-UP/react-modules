doctype html
html(lang="en")
    head 
        title Travel CRM
        meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
        link(rel="stylesheet" type="text/css" href="./css/style.min.css")
    body
        main
            h1.package Charming views of Maldives Packages - 3 Nights & 4 Days
            section.section
                ul.tabs
                    li(class="active" data-tab=".tab-1") Day 1
                    li(data-tab=".tab-2") Day 2
                    li(data-tab=".tab-3") Day 3
                    li(data-tab=".tab-4") Day 4
                    li(data-tab=".tab-5") Day 5
                    li(data-tab=".tab-6") Day 6
                    li(data-tab=".tab-7") Day 7
                    li(data-tab=".tab-8") Day 8
                    li.newDay
                        a(href="javascript:;" class="link") + New Day
                .tabsDetail
                    include tabDetails
        script.
            (function(){
                document.querySelectorAll("main .section .tabs>li.active").forEach(function(h){
                    document.querySelectorAll(h.getAttribute("data-tab")).forEach(function(i){
                        i.classList.add("active");
                    });
                });
                document.querySelectorAll("main .section .tabs>li").forEach(function(e){
                    e.addEventListener("click", function(){
                        
                        e.closest(".tabs").querySelectorAll("li").forEach(function(g){
                            g.classList.remove("active");
                        });
                        e.classList.add("active");

                        e.closest(".section").querySelectorAll(".tabDetail").forEach(function(g){
                            g.classList.remove("active");
                        });

                        document.querySelectorAll(e.getAttribute("data-tab")).forEach(function(f){
                            f.classList.add("active");
                        });
                    });
                });
            })();
